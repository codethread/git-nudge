{
	"name": "git-nudge",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"boot": "pnpm schema && pnpm types && pnpm fakes && echo \"Ready, run 'pnpm dev' or 'pnpm app'\"",
		"---------------------dev---------------------------": "---",
		"dev": "vite",
		"app": "tauri dev",
		"---------------------checks------------------------": "---",
		"ts": "tsc --watch",
		"lint": "biome lint --write src scripts vite.config.ts",
		"format": "prettier --write \"{src,scripts}/**/*.{ts,tsx}\"",
		"---------------------build-------------------------": "---",
		"build": "BUILD_HASH=$(git rev-parse --short HEAD) vite build",
		"preview": "pnpm build && vite preview",
		"---------------------helpers-----------------------": "---",
		"tauri": "tauri",
		"types": "pnpm types:client && pnpm types:lsp",
		"types:lsp": "node --experimental-strip-types --no-warnings ./scripts/codegen-lsp.ts",
		"types:client": "graphql-codegen --config ./scripts/codegen.ts",
		"types:server": "graphql-codegen --config ./scripts/codegen-server.ts",
		"fakes": "node --experimental-strip-types --no-warnings ./scripts/get-fake-characters.bin.ts",
		"schema": "node --experimental-strip-types --no-warnings ./scripts/download-schema.bin.ts"
	},
	"dependencies": {
		"@apollo/server": "^4.11.3",
		"@graphql-tools/mock": "^9.0.22",
		"@graphql-tools/schema": "^10.0.23",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-progress": "^1.1.2",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@tailwindcss/vite": "^4.0.14",
		"@tanstack/query-async-storage-persister": "^5.69.0",
		"@tanstack/react-query": "^5.67.2",
		"@tanstack/react-query-persist-client": "^5.69.0",
		"@tauri-apps/api": "^2",
		"@tauri-apps/plugin-fs": "~2",
		"@tauri-apps/plugin-log": "~2",
		"@tauri-apps/plugin-notification": "~2",
		"@tauri-apps/plugin-opener": "^2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"derive-zustand": "^0.1.1",
		"fast-deep-equal": "^3.1.3",
		"graphql": "^16.10.0",
		"immer": "^10.1.1",
		"lucide-react": "^0.482.0",
		"netrc": "^0.1.4",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-error-boundary": "^5.0.0",
		"tailwind-merge": "^3.0.2",
		"tailwindcss": "^4.0.14",
		"tailwindcss-animate": "^1.0.7",
		"tailwindcss-animated": "^2.0.0",
		"ts-pattern": "^5.6.2",
		"zod": "^3.24.2",
		"zod-validation-error": "^3.4.0",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@0no-co/graphqlsp": "^1.12.16",
		"@biomejs/biome": "1.9.4",
		"@faker-js/faker": "^9.6.0",
		"@graphql-codegen/cli": "^5.0.5",
		"@graphql-codegen/schema-ast": "^4.1.0",
		"@graphql-codegen/typescript": "^4.1.6",
		"@graphql-codegen/typescript-react-query": "^6.1.0",
		"@graphql-codegen/typescript-resolvers": "^4.5.0",
		"@parcel/watcher": "^2.5.1",
		"@tanstack/react-query-devtools": "^5.71.1",
		"@tauri-apps/cli": "^2",
		"@total-typescript/ts-reset": "^0.6.1",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "22.x.x",
		"@types/react": "^18.3.1",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-react": "^4.3.4",
		"minimist": "^1.2.8",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"type-fest": "^4.38.0",
		"typescript": "~5.6.3",
		"unzipper": "^0.12.3",
		"vite": "^6.0.3",
		"vite-plugin-full-reload": "^1.2.0",
		"vite-plugin-watch-and-run": "^1.7.4"
	},
	"volta": {
		"node": "22.14.0",
		"pnpm": "10.6.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"esbuild"
		]
	}
}
